<!-- <!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 
	2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd" > -->

<web-app>
	<display-name>Welcome to Application Controller</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- Servlets -->
	<servlet>
		<servlet-name>servlets.ServBase</servlet-name>
		<servlet-class>servlets.ServBase</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>hibernate.hibernateServlet</servlet-name>
		<servlet-class>hibernate.hibernateServlet</servlet-class>
	</servlet>	
	<servlet>
		<description>
		</description>
		<display-name>ClientAppController</display-name>
		<servlet-name>ClientServlet</servlet-name>
		<servlet-class>acp.ClientServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>GetDataServlet</display-name>
		<servlet-name>GetDataServlet</servlet-name>
		<servlet-class>hibernate.utils.GetDataServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>MobileServlet</display-name>
		<servlet-name>MobileServlet</servlet-name>
		<servlet-class>servlets.MobileServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>SystemTest</display-name>
		<servlet-name>SystemTest</servlet-name>
		<servlet-class>servlets.SystemTest</servlet-class>
	</servlet>

	<!-- Servlet Mappings -->
	<servlet-mapping>
		<servlet-name>servlets.ServBase</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>hibernate.hibernateServlet</servlet-name>
		<url-pattern>/hibernateServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ClientServlet</servlet-name>
		<url-pattern>/ClientServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetDataServlet</servlet-name>
		<url-pattern>/GetDataServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MobileServlet</servlet-name>
		<url-pattern>/MobileServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SystemTest</servlet-name>
		<url-pattern>/SystemTest</url-pattern>
	</servlet-mapping>

</web-app>